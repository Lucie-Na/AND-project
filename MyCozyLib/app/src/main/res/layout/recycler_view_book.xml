<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    android:layout_margin="@dimen/big_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="100sp"
            android:layout_height="100sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_title"/>

            <TextView
                android:id="@+id/text_book_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_subtitle"/>

            <TextView
                android:id="@+id/text_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_author" />

            <TextView
                android:id="@+id/text_book_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_editor" />

            <TextView
                android:id="@+id/text_book_published_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_published_date" />

            <TextView
                android:id="@+id/text_book_page_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_book_page_count" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>