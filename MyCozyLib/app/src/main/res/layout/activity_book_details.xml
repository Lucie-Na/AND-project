<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:layout_margin="@dimen/big_margin">

    <ImageButton
        android:id="@+id/btn_book_details_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24"
        android:contentDescription="@string/nav_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_book_details_cover"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:contentDescription="@string/book_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_book_details_back"
        android:layout_marginTop="@dimen/small_margin"/>

    <TextView
        android:id="@+id/text_book_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_book_details_cover"
        app:layout_constraintStart_toEndOf="@id/img_book_details_cover"/>

    <TextView
        android:id="@+id/text_book_details_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_subtitle"
        app:layout_constraintLeft_toLeftOf="@+id/text_book_details_title"
        app:layout_constraintTop_toBottomOf="@+id/text_book_details_title"
        android:paddingStart="@dimen/big_margin"/>

    <TextView
        android:id="@+id/text_book_details_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_author"
        app:layout_constraintStart_toEndOf="@id/img_book_details_cover"
        app:layout_constraintTop_toBottomOf="@+id/text_book_details_subtitle"/>

    <TextView
        android:id="@+id/text_book_details_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_editor"
        app:layout_constraintStart_toEndOf="@id/img_book_details_cover"
        app:layout_constraintTop_toBottomOf="@+id/text_book_details_author"/>

    <TextView
        android:id="@+id/text_book_details_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_published_date"
        app:layout_constraintStart_toEndOf="@id/img_book_details_cover"
        app:layout_constraintTop_toBottomOf="@+id/text_book_details_editor"/>

    <TextView
        android:id="@+id/text_book_details_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_page_count"
        app:layout_constraintStart_toEndOf="@id/img_book_details_cover"
        app:layout_constraintTop_toBottomOf="@+id/text_book_details_published_date"/>

    <TextView
        android:id="@+id/text_book_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_book_synopsis"
        app:layout_constraintTop_toBottomOf="@id/img_book_details_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/small_margin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_library_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>